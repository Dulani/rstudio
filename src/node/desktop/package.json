{
  "name": "rstudio",
  "productName": "RStudio",
  "version": "0.0.1",
  "description": "RStudio",
  "main": "./dist/src/main/main.js",
  "repository": "https://github.com/rstudio/rstudio",
  "author": "RStudio PBC",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "@tsconfig/node14": "^1.0.0",
    "@types/chai": "^4.2.18",
    "@types/crc": "^3.4.0",
    "@types/line-reader": "^0.0.34",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.14.0",
    "@types/sinon": "^10.0.2",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "chai": "^4.3.4",
    "electron": "^13.0.1",
    "electron-mocha": "^10.0.0",
    "electron-packager": "^15.2.0",
    "eslint": "^7.31.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "playwright": "^1.12.3",
    "sinon": "^11.1.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "crc": "^3.8.0",
    "electron-store": "^8.0.0",
    "line-reader": "^0.4.0",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "build": "tsc && yarn run copy-files",
    "clean": "ts-node scripts/clean.ts",
    "copy-files": "ts-node scripts/copy-files.ts",
    "watch": "tsc -w",
    "package": "yarn run build && electron-packager ./ --prune --package-manager=yarn --out=./package --overwrite --ignore tsconfig.tsbuildinfo",
    "lint": "eslint ./src ./test",
    "start": "yarn run build && electron --trace-warnings ./dist/src/main/main.js",
    "start-diag": "yarn run build && electron --trace-warnings ./dist/src/main/main.js --run-diagnostics",
    "show-version": "yarn run build && electron ./dist/src/main/main.js --version-json",
    "test": "electron-mocha -c --config ./test/unit/mocharc.json",
    "testcover": "nyc electron-mocha -c --config ./test/unit/mocharc.json",
    "testwip": "electron-mocha -c -g WIP --config ./test/unit/mocharc.json",
    "testint": "mocha -c --config ./test/int/mocharc.json",
    "testintwip": "mocha -c -g WIP  --config ./test/int/mocharc.json"
  }
}
